{
  "kind": "collectionType",
  "collectionName": "quotations",
  "info": {
    "singularName": "quotation",
    "pluralName": "quotations",
    "displayName": "Quotation"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "QuotationNo": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "richtext",
      "default": "-",
      "required": true
    },
    "UseIndividualDiscount": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "DiscountInPercentage": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "quotation_details": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quotation-detail.quotation-detail",
      "mappedBy": "quotation"
    }
  }
}
